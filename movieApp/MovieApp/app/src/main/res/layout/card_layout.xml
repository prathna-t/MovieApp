<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    card_view:cardBackgroundColor="@android:color/holo_blue_dark"
                                    card_view:cardCornerRadius="12dp"
                                    card_view:cardElevation="3dp"
                                    card_view:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <TextView
            android:id="@+id/title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintStart_toStartOf="@+id/guideline3"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/year_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            card_view:layout_constraintStart_toStartOf="@+id/guideline3"
            card_view:layout_constraintTop_toBottomOf="@+id/title_id" />


        <TextView
            android:id="@+id/country_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            card_view:layout_constraintStart_toStartOf="@+id/guideline3"
            card_view:layout_constraintTop_toBottomOf="@+id/year_id" />

        <TextView
            android:id="@+id/genre_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            card_view:layout_constraintStart_toStartOf="@+id/guideline3"
            card_view:layout_constraintTop_toBottomOf="@+id/country_id" />

        <TextView
            android:id="@+id/cost_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            card_view:layout_constraintStart_toStartOf="@+id/guideline3"
            card_view:layout_constraintTop_toBottomOf="@+id/genre_id" />

        <TextView
            android:id="@+id/keywords_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            card_view:layout_constraintStart_toStartOf="@+id/guideline3"
            card_view:layout_constraintTop_toBottomOf="@+id/cost_id" />


        <TextView
            android:id="@+id/cardTitle_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Title"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline3"
            card_view:layout_constraintStart_toStartOf="@+id/guideline5"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cardYear_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Year"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline3"
            card_view:layout_constraintStart_toStartOf="@+id/guideline5"
            card_view:layout_constraintTop_toBottomOf="@+id/cardTitle_id" />

        <TextView
            android:id="@+id/cardCountry_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="Country"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline3"
            card_view:layout_constraintStart_toStartOf="@+id/guideline5"
            card_view:layout_constraintTop_toBottomOf="@+id/cardYear_id" />

        <TextView
            android:id="@+id/cardGenre_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="Genre"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline3"
            card_view:layout_constraintStart_toStartOf="@+id/guideline5"
            card_view:layout_constraintTop_toBottomOf="@+id/cardCountry_id" />

        <TextView
            android:id="@+id/cardCost_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:text="Cost"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline3"
            card_view:layout_constraintStart_toStartOf="@+id/guideline5"
            card_view:layout_constraintTop_toBottomOf="@+id/cardGenre_id" />

        <TextView
            android:id="@+id/cardKeywords_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:text="Keywords"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/guideline3"
            card_view:layout_constraintStart_toStartOf="@+id/guideline5"
            card_view:layout_constraintTop_toBottomOf="@+id/cardCost_id" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.29" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_percent="0.029925186" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>